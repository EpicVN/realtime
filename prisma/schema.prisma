// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. Định nghĩa quyền hạn (Role) rõ ràng
// Dùng Enum giúp code không bao giờ bị lỗi chính tả kiểu "admin" vs "Admin"
enum Role {
  SUPER_ADMIN // Tài khoản trùm (không được đổi pass)
  ADMIN // Tài khoản thường
}

// 2. Model cho Contact Form (Khách hàng từ Web)
model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  company   String?
  interest  String? // VD: VoIP, CRM, AutoDialer
  message   String
  status    String   @default("PENDING") // PENDING, CALLED, CLOSED
  createdAt DateTime @default(now())
}

// 3. Model User (Dùng để Admin đăng nhập)
// Đã lược bỏ các bảng Account/Session vì ta dùng JWT Credentials
model User {
  id          String   @id @default(cuid())
  name        String?
  email       String   @unique
  password    String
  role        Role     @default(ADMIN)
  permissions String[] @default([])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// 4. Model Post (Bài viết trên Blog)
model Post {
  id          String   @id @default(uuid())
  title       String   @db.VarChar(100)
  slug        String   @unique
  description String?  @db.VarChar(160)
  content     String   @db.Text
  thumbnail   String?
  published   Boolean  @default(true)
  views       Int      @default(0)
  language    String   @default("vi")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
